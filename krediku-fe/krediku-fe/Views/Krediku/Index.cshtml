@model IEnumerable<krediku_fe.Models.TranViewModel>

@{
    ViewData["Tittle"] = "Data Transactions";
}


<h1>Daftar Transaksi Krediku</h1>

<div class="mt-3"></div>

@if (@TempData["TransactionReponse"] != null)
{
    <div class="alert alert-success">
        <strong>Success !</strong> @TempData["TransactionReponse"]
    </div>

}

<table class="table table-bordered">
    <thead>
        <tr>
            <th scope="col">@Html.DisplayNameFor(a => a.NoAgreement)</th>
            <th scope="col">@Html.DisplayNameFor(a => a.NoBPKB)</th>
            <th scope="col">@Html.DisplayNameFor(a => a.BranchId)</th>
            <th scope="col">@Html.DisplayNameFor(a => a.DateBPKB)</th>
            <th scope="col">@Html.DisplayNameFor(a => a.NoFaktur)</th>
            <th scope="col">@Html.DisplayNameFor(a => a.DateFaktur)</th>
            <th scope="col">@Html.DisplayNameFor(a => a.Location)</th>
            <th scope="col">@Html.DisplayNameFor(a => a.NoPolis)</th>
            <th scope="col">@Html.DisplayNameFor(a => a.DateInput)</th>
        </tr>
    </thead>
    <tbody>
        @if(Model != null)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.NoAgreement</td>
                    <td>@item.NoBPKB</td>
                    <td>@item.BranchId</td>
                    <td>@item.DateBPKB.ToString("dd MMM yyyy")</td>
                    <td>@item.NoFaktur</td>
                    <td>@item.DateFaktur.ToString("dd MMM yyyy")</td>
                    <td>@item.Location</td>
                    <td>@item.NoPolis</td>
                    <td>@item.DateInput.ToString("dd MMM yyyy")</td>
                </tr>
            }
        }

    </tbody>
</table>